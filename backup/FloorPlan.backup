<!DOCTYPE html>
<html lang="th">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RVR Project R8 - Blueprint Viewer</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
        href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700&family=Sarabun:wght@300;400;600&display=swap"
        rel="stylesheet">
    <!-- Icon Library -->
    <script src="https://cdn.jsdelivr.net/npm/lucide@latest/dist/umd/lucide.min.js"></script>
    <!-- Load Data Script -->
    <script src="floor_plan_data.js"></script>
    <style>
        :root {
            --blueprint-bg: #1a365d;
            /* Deep Blue */
            --blueprint-grid: #2c5282;
            /* Lighter Blue for grid */
            --blueprint-line: #90cdf4;
            /* Cyan/Light Blue for walls */
            --blueprint-text: #e2e8f0;
            --highlight: #f6ad55;
            /* Orange for active items */
        }

        body {
            background-color: #0f172a;
            font-family: 'Sarabun', sans-serif;
            color: var(--blueprint-text);
            overflow: hidden;
            /* App-like feel */
        }

        .font-mono {
            font-family: 'JetBrains Mono', monospace;
        }

        /* Blueprint Background Pattern */
        .blueprint-canvas {
            background-color: var(--blueprint-bg);
            background-image:
                linear-gradient(var(--blueprint-grid) 1px, transparent 1px),
                linear-gradient(90deg, var(--blueprint-grid) 1px, transparent 1px);
            background-size: 40px 40px;
            box-shadow: inset 0 0 100px rgba(0, 0, 0, 0.5);
        }

        /* SVG Styles */
        .wall {
            fill: none;
            stroke: #fff;
            stroke-width: 2;
            vector-effect: non-scaling-stroke;
        }

        .partition {
            fill: none;
            stroke: var(--blueprint-line);
            stroke-width: 1;
            stroke-dasharray: 4;
        }

        .room {
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .room:hover circle,
        .room:hover rect {
            fill: var(--highlight);
            stroke: #fff;
            stroke-width: 2;
        }

        .room-label {
            font-family: 'JetBrains Mono', monospace;
            font-size: 10px;
            fill: var(--blueprint-text);
            text-anchor: middle;
            pointer-events: none;
        }

        .dimension-line {
            stroke: #718096;
            stroke-width: 0.5;
            marker-end: url(#arrow);
            marker-start: url(#arrow);
        }

        /* Custom Scrollbar for sidebar */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: #1e293b;
        }

        ::-webkit-scrollbar-thumb {
            background: #475569;
            border-radius: 4px;
        }
    </style>
</head>

<body class="flex h-screen flex-col md:flex-row">

    <!-- Sidebar / Control Panel -->
    <aside class="w-full md:w-80 bg-slate-900 border-r border-slate-700 flex flex-col shadow-2xl z-10">
        <!-- Project Header -->
        <div class="p-6 border-b border-slate-700 bg-slate-800">
            <h1 class="text-xl font-bold text-sky-400 font-mono">PROJECT: RVR R8</h1>
            <p class="text-xs text-slate-400 mt-1">DOC ID: 251124-FDN-001</p>
            <div class="mt-4 flex items-center space-x-2">
                <span class="px-2 py-1 bg-green-900 text-green-300 text-xs rounded border border-green-700">DATA
                    LINKED</span>
                <span class="text-xs text-slate-500">V01</span>
            </div>
        </div>

        <!-- Layer Controls -->
        <div class="p-6 flex-1 overflow-y-auto">
            <h3 class="text-sm font-semibold text-slate-300 uppercase tracking-wider mb-4 font-mono">Layers & Zones</h3>

            <div class="space-y-3">
                <label class="flex items-center space-x-3 cursor-pointer group">
                    <input type="checkbox" checked onchange="toggleZone('A')"
                        class="form-checkbox h-4 w-4 text-sky-500 rounded bg-slate-800 border-slate-600 focus:ring-sky-500 focus:ring-offset-slate-900">
                    <span class="text-slate-300 group-hover:text-white transition-colors">Zone A</span>
                </label>
                <label class="flex items-center space-x-3 cursor-pointer group">
                    <input type="checkbox" checked onchange="toggleZone('B')"
                        class="form-checkbox h-4 w-4 text-sky-500 rounded bg-slate-800 border-slate-600 focus:ring-sky-500 focus:ring-offset-slate-900">
                    <span class="text-slate-300 group-hover:text-white transition-colors">Zone B</span>
                </label>
                <label class="flex items-center space-x-3 cursor-pointer group">
                    <input type="checkbox" checked onchange="toggleZone('C')"
                        class="form-checkbox h-4 w-4 text-sky-500 rounded bg-slate-800 border-slate-600 focus:ring-sky-500 focus:ring-offset-slate-900">
                    <span class="text-slate-300 group-hover:text-white transition-colors">Zone C</span>
                </label>
            </div>

            <!-- Legend Section -->
            <div class="mt-8">
                <h3 class="text-sm font-semibold text-slate-300 uppercase tracking-wider mb-4 font-mono">Legend
                    (สัญลักษณ์)</h3>
                <div class="space-y-3">
                    <div class="flex items-center space-x-3">
                        <div class="w-3 h-3 rounded-full border border-slate-400 bg-slate-800"></div>
                        <span class="text-slate-400 text-sm">Column (เสา)</span>
                    </div>
                    <div class="flex items-center space-x-3">
                        <div class="w-3 h-3 rounded-sm border border-slate-400 bg-slate-800"></div>
                        <span class="text-slate-400 text-sm">Wall (ผนัง)</span>
                    </div>
                </div>
            </div>

            <!-- Visibility Controls -->
            <div class="mt-8">
                <h3 class="text-sm font-semibold text-slate-300 uppercase tracking-wider mb-4 font-mono">Options</h3>
                <label class="flex items-center space-x-3 cursor-pointer group">
                    <input type="checkbox" checked onchange="toggleLabels(this.checked)"
                        class="form-checkbox h-4 w-4 text-sky-500 rounded bg-slate-800 border-slate-600 focus:ring-sky-500 focus:ring-offset-slate-900">
                    <span class="text-slate-300 group-hover:text-white transition-colors">Show Labels (แสดงชื่อ)</span>
                </label>
            </div>

            <div class="mt-8">
                <h3 class="text-sm font-semibold text-slate-300 uppercase tracking-wider mb-4 font-mono">Statistics</h3>
                <ul class="space-y-2 text-sm text-slate-400">
                    <li class="flex justify-between items-center p-2 rounded border-l-2 border-transparent">
                        <span>Total Points</span>
                        <span id="stat-total" class="text-xs font-mono bg-slate-800 px-1 rounded">-</span>
                    </li>
                    <li class="flex justify-between items-center p-2 rounded border-l-2 border-transparent">
                        <span>Max Load</span>
                        <span id="stat-max-load"
                            class="text-xs font-mono bg-slate-800 px-1 rounded text-red-400">-</span>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Footer Info -->
        <div class="p-4 bg-slate-950 border-t border-slate-800 text-xs text-slate-500 font-mono">
            <div class="flex justify-between mb-1">
                <span>SCALE</span>
                <span>AUTO</span>
            </div>
            <div class="flex justify-between">
                <span>DATE</span>
                <span>24 NOV 2025</span>
            </div>
        </div>
    </aside>

    <!-- Main Viewport -->
    <main class="flex-1 relative flex flex-col h-full">
        <!-- Toolbar Overlay -->
        <div class="absolute top-4 left-4 right-4 z-20 flex justify-between pointer-events-none">
            <div
                class="bg-slate-900/90 backdrop-blur border border-slate-600 rounded-lg p-2 shadow-lg pointer-events-auto flex items-center space-x-2">
                <button id="btn-zoom-in" class="p-2 hover:bg-slate-700 rounded text-slate-300 transition-colors"
                    title="Zoom In">
                    <i data-lucide="zoom-in" class="w-5 h-5"></i>
                </button>
                <button id="btn-zoom-out" class="p-2 hover:bg-slate-700 rounded text-slate-300 transition-colors"
                    title="Zoom Out">
                    <i data-lucide="zoom-out" class="w-5 h-5"></i>
                </button>
                <div class="w-px h-6 bg-slate-600 mx-2"></div>
                <button id="btn-reset" class="p-2 hover:bg-slate-700 rounded text-slate-300 transition-colors"
                    title="Reset View">
                    <i data-lucide="maximize" class="w-5 h-5"></i>
                </button>
            </div>

            <div
                class="bg-slate-900/90 backdrop-blur border border-slate-600 rounded-lg px-4 py-2 shadow-lg pointer-events-auto text-sky-400 font-mono text-sm flex items-center">
                <i data-lucide="mouse-pointer" class="w-4 h-4 mr-2"></i>
                <span id="coord-display">X: 0 Y: 0</span>
            </div>
        </div>

        <!-- Blueprint Canvas -->
        <div class="blueprint-canvas w-full h-full overflow-hidden relative cursor-grab" id="canvas-container">
            <svg id="main-svg" viewBox="0 0 1200 600" class="w-full h-full" style="overflow: visible;"
                preserveAspectRatio="xMidYMid meet">
                <defs>
                    <marker id="arrow" markerWidth="10" markerHeight="10" refX="9" refY="3" orient="auto"
                        markerUnits="strokeWidth">
                        <path d="M0,0 L0,6 L9,3 z" fill="#718096" />
                    </marker>
                    <marker id="dot" markerWidth="8" markerHeight="8" refX="4" refY="4" orient="auto">
                        <circle cx="4" cy="4" r="3" fill="#38bdf8" />
                    </marker>
                </defs>

                <!-- Dynamic Content Group -->
                <g id="content-layer"></g>

                <!-- Callout Layer (Top) -->
                <g id="callout-layer"></g>
            </svg>
        </div>

    </main>

    <script>
        // Initialize Icons
        lucide.createIcons();

        const canvasContainer = document.getElementById('canvas-container');
        const coordDisplay = document.getElementById('coord-display');
        const svg = document.getElementById('main-svg');
        const contentLayer = document.getElementById('content-layer');
        const calloutLayer = document.getElementById('callout-layer');

        // Stats
        const statTotal = document.getElementById('stat-total');
        const statMaxLoad = document.getElementById('stat-max-load');

        let floorData = [];
        let activeZones = { 'A': true, 'B': true, 'C': true };
        let showLabels = true;

        // Load Data from Global Variable (set by floor_plan_data.js)
        if (window.floorData) {
            floorData = window.floorData;
            updateStats(floorData);
            renderData(floorData);
        } else {
            console.error('floorData not found. Make sure floor_plan_data.js is loaded.');
            alert('Could not load data. Please ensure floor_plan_data.js exists.');
        }

        function updateStats(data) {
            statTotal.textContent = data.length;
            const maxLoad = Math.min(...data.map(d => d.load)); // Loads are negative?
            statMaxLoad.textContent = maxLoad.toFixed(2);
        }

        function toggleZone(zone) {
            activeZones[zone] = !activeZones[zone];
            const filtered = floorData.filter(d => activeZones[d.zone]);
            renderData(filtered, false);
        }

        function toggleLabels(checked) {
            showLabels = checked;
            const labels = document.querySelectorAll('.room-label-text');
            labels.forEach(el => {
                el.style.display = showLabels ? 'block' : 'none';
            });
        }

        function renderData(data, recalcBounds = true) {
            contentLayer.innerHTML = ''; // Clear existing
            calloutLayer.innerHTML = ''; // Clear callouts

            if (data.length === 0) return;

            // Use full dataset for bounds if available, to keep scale consistent
            const boundsData = recalcBounds ? (floorData.length > 0 ? floorData : data) : floorData;

            // Calculate Bounds
            const xValues = boundsData.map(d => d.x);
            const yValues = boundsData.map(d => d.y);
            const minX = Math.min(...xValues);
            const maxX = Math.max(...xValues);
            const minY = Math.min(...yValues);
            const maxY = Math.max(...yValues);

            // Add some padding
            const padding = 5; // meters
            const rangeX = maxX - minX + (padding * 2);
            const rangeY = maxY - minY + (padding * 2);

            const svgWidth = 1200;
            const svgHeight = 600;

            // Scale to fit
            const scaleX = svgWidth / rangeX;
            const scaleY = svgHeight / rangeY;
            const scale = Math.min(scaleX, scaleY) * 0.9;

            // Center
            const marginX = (svgWidth - (maxX - minX) * scale) / 2;
            const marginY = (svgHeight - (maxY - minY) * scale) / 2;

            data.forEach(item => {
                const sx = (item.x - minX) * scale + marginX;
                const sy = (maxY - item.y) * scale + marginY;

                const g = document.createElementNS("http://www.w3.org/2000/svg", "g");
                g.setAttribute("class", "room");

                // Determine Type based on Label (C=Column, CW/SW=Wall)
                const isWall = item.label.includes('CW') || item.label.includes('SW');

                let shape;
                if (isWall) {
                    // Render Wall as Square (Smaller)
                    shape = document.createElementNS("http://www.w3.org/2000/svg", "rect");
                    const size = 5; // Reduced from 6
                    shape.setAttribute("x", sx - size / 2);
                    shape.setAttribute("y", sy - size / 2);
                    shape.setAttribute("width", size);
                    shape.setAttribute("height", size);
                    shape.setAttribute("rx", 0.5);
                } else {
                    // Render Column as Circle (Smaller)
                    shape = document.createElementNS("http://www.w3.org/2000/svg", "circle");
                    shape.setAttribute("cx", sx);
                    shape.setAttribute("cy", sy);
                    shape.setAttribute("r", 2.5); // Reduced from 3
                }

                shape.setAttribute("fill", getColorByZone(item.zone));
                shape.setAttribute("stroke", "var(--blueprint-line)");
                shape.setAttribute("stroke-width", "0.2"); // Thinner stroke

                // Add Permanent Label (Centered Below)
                const text = document.createElementNS("http://www.w3.org/2000/svg", "text");
                text.setAttribute("x", sx);
                text.setAttribute("y", sy + 3.5); // Offset below
                text.setAttribute("text-anchor", "middle"); // Center align
                text.setAttribute("fill", "#94a3b8"); // Slate 400
                text.setAttribute("font-family", "'JetBrains Mono', monospace");
                text.setAttribute("font-size", "1px"); // Even smaller font
                text.setAttribute("class", "room-label-text");
                text.style.display = showLabels ? 'block' : 'none';
                text.textContent = item.label; // Only Label to avoid clutter

                // Interaction (Keep callout for detailed view)
                g.onclick = (e) => {
                    e.stopPropagation();
                    drawCallout(item, sx, sy);
                };

                g.appendChild(shape);
                g.appendChild(text);

                contentLayer.appendChild(g);
            });
        }

        function drawCallout(item, sx, sy) {
            // Clear existing callout
            calloutLayer.innerHTML = '';

            const g = document.createElementNS("http://www.w3.org/2000/svg", "g");

            // Leader Line Config
            const offsetX = 20;
            const offsetY = -20;
            const textPadding = 3;
            const lineHeight = 8;

            // End point of the diagonal line
            const ex = sx + offsetX;
            const ey = sy + offsetY;

            // Horizontal landing line length
            const landingLen = 60;

            // 1. Draw Leader Line (Polyline)
            const line = document.createElementNS("http://www.w3.org/2000/svg", "polyline");
            // Points: Start -> Diagonal -> Horizontal
            line.setAttribute("points", `${sx},${sy} ${ex},${ey} ${ex + landingLen},${ey}`);
            line.setAttribute("fill", "none");
            line.setAttribute("stroke", "#38bdf8"); // Sky 400
            line.setAttribute("stroke-width", "0.5");
            line.setAttribute("marker-start", "url(#dot)");
            g.appendChild(line);

            // 2. Draw Text Info
            // Label (Big)
            const labelText = document.createElementNS("http://www.w3.org/2000/svg", "text");
            labelText.setAttribute("x", ex + textPadding);
            labelText.setAttribute("y", ey - 4);
            labelText.setAttribute("fill", "#38bdf8");
            labelText.setAttribute("font-family", "'JetBrains Mono', monospace");
            labelText.setAttribute("font-weight", "bold");
            labelText.setAttribute("font-size", "8");
            labelText.textContent = item.label;
            g.appendChild(labelText);

            // Details (Small)
            const details = [
                `Zone: ${item.zone}`,
                `FD: ${item.foundation}`,
                `Load: ${item.load}`,
                `X: ${item.x}, Y: ${item.y}`
            ];

            details.forEach((text, index) => {
                const t = document.createElementNS("http://www.w3.org/2000/svg", "text");
                t.setAttribute("x", ex + textPadding);
                t.setAttribute("y", ey + 6 + (index * lineHeight));
                t.setAttribute("fill", "#e2e8f0"); // Slate 200
                t.setAttribute("font-family", "'Sarabun', sans-serif");
                t.setAttribute("font-size", "6");
                t.textContent = text;
                g.appendChild(t);
            });

            calloutLayer.appendChild(g);
        }

        function getColorByZone(zone) {
            switch (zone) {
                case 'A': return '#63b3ed'; // Blue 400
                case 'B': return '#f6ad55'; // Orange 400
                case 'C': return '#68d391'; // Green 400
                default: return '#cbd5e0';
            }
        }

        // Click outside to close
        canvasContainer.addEventListener('click', (e) => {
            if (e.target === canvasContainer || e.target.tagName === 'svg') {
                calloutLayer.innerHTML = '';
            }
        });

        // --- Zoom & Pan Logic ---
        let currentZoom = 1;
        let isDragging = false;
        let startX, startY;
        let translateX = 0;
        let translateY = 0;

        const btnZoomIn = document.getElementById('btn-zoom-in');
        const btnZoomOut = document.getElementById('btn-zoom-out');
        const btnReset = document.getElementById('btn-reset');

        function updateTransform() {
            // Apply transform to BOTH content and callout layers
            const transform = `translate(${translateX}px, ${translateY}px) scale(${currentZoom})`;
            contentLayer.style.transform = transform;
            contentLayer.style.transformOrigin = "center";

            calloutLayer.style.transform = transform;
            calloutLayer.style.transformOrigin = "center";

            const transition = isDragging ? "none" : "transform 0.1s ease-out";
            contentLayer.style.transition = transition;
            calloutLayer.style.transition = transition;
        }

        btnZoomIn.onclick = () => {
            currentZoom *= 1.2;
            updateTransform();
        };

        btnZoomOut.onclick = () => {
            currentZoom /= 1.2;
            updateTransform();
        };

        btnReset.onclick = () => {
            currentZoom = 1;
            translateX = 0;
            translateY = 0;
            updateTransform();
        };

        // Panning Events
        canvasContainer.addEventListener('mousedown', (e) => {
            if (e.target.closest('.room')) return; // Don't drag if clicking a room
            isDragging = true;
            startX = e.clientX - translateX;
            startY = e.clientY - translateY;
            canvasContainer.style.cursor = 'grabbing';
        });

        canvasContainer.addEventListener('mousemove', (e) => {
            if (isDragging) {
                e.preventDefault();
                translateX = e.clientX - startX;
                translateY = e.clientY - startY;
                updateTransform();
            }

            // Coord display
            const rect = canvasContainer.getBoundingClientRect();
            const x = Math.round(e.clientX - rect.left);
            const y = Math.round(e.clientY - rect.top);
            coordDisplay.innerHTML = `<i data-lucide="mouse-pointer" class="w-4 h-4 mr-2 inline"></i> X: ${x} Y: ${y}`;
        });

        canvasContainer.addEventListener('mouseup', () => {
            isDragging = false;
            canvasContainer.style.cursor = 'grab';
        });

        canvasContainer.addEventListener('mouseleave', () => {
            isDragging = false;
            canvasContainer.style.cursor = 'grab';
        });

        // Wheel Zoom
        canvasContainer.addEventListener('wheel', (e) => {
            e.preventDefault();
            const scaleAmount = 0.1;
            if (e.deltaY < 0) {
                currentZoom *= (1 + scaleAmount);
            } else {
                currentZoom /= (1 + scaleAmount);
            }
            updateTransform();
        });

    </script>
</body>

</html>